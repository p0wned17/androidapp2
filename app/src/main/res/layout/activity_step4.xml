<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".step4"
    android:background="#6f9cd2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="Step 4/5"
        android:textColor="#fdfefe"
        android:textSize="46dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="47dp"
        android:text="How often do you exercise?"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/newbie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newbie"
        android:layout_width="228dp"
        android:layout_height="74dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button"
        android:text="Newbie &#10;Just getting started"
        android:textAllCaps="false"
        android:textColor="#6f9cd2"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/twobut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/twobut"
        android:layout_width="228dp"
        android:layout_height="74dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button"
        android:text="Keep on &#10;1-2 times a week"
        android:textAllCaps="false"
        android:textColor="#6f9cd2"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/thirdbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/thirdbut"
        android:layout_width="228dp"
        android:layout_height="74dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/button"
        android:text="Advanced &#10;More than 3 times a week"
        android:textAllCaps="false"
        android:textColor="#6f9cd2"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>